{
  "name": "pto-tracker",
  "version": "0.1.0",
  "description": "Freshbooks-integrated PTO Tracker for Bitovi employees",
  "main": "app.js",
  "scripts": {
    "build": "steal-tools",
    "bundle": "steal-tools bundle --dev --no-minify",
    "develop": "other-index development.html",
    "lint": "standard --fix 'components/**/*.js' 'models/**/*.js'",
    "postinstall": "npm run bundle",
    "start": "other-index production.html 3000"
  },
  "author": "Mark Stahl <mjstahl@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@mjstahl/other-index": "^0.2.0",
    "node": "^10.14.0",
    "standard": "^12.0.1",
    "steal-tools": "^2.0.11"
  },
  "dependencies": {
    "can": "^5.19.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "steal": "^2.1.10",
    "steal-less": "^1.3.4",
    "xml-js": "^1.6.8"
  },
  "steal": {
    "map": {
      "xml-js": "xml-js/dist/xml-js"
    },
    "meta": {
      "xml-js/dist/xml-js": {
        "format": "global"
      }
    },
    "plugins": [
      "can",
      "steal-less"
    ]
  }
}
