<div class="second-step display-wrapper">
  <div class="number-wrapper">
    <div class="hours-container">
      {{#if(remainingHours)}}
        <h1>{{remainingHours}}</h1>
      {{else}}
        <h1>--</h1>
      {{/if}}
      <h4>hours available</h4>
    </div>
    <div class="days-container">
      {{#if(remainingHours)}}
        <h1>{{remainingDays}}</h1>
      {{else}}
        <h1>--</h1>
      {{/if}}
      <h4>days available</h4>
    </div>
  </div>
  <table>
